<div class="head-movies">
  <h2>Ironhack Cinema</h2>
  <h3>Click on the movie to check the showtimes!</h3>
</div>
{{#each movies}}
  <div class="container-box">
    <div class="box">
      <img src="{{this.image}}" alt="{{this.title}}" />
      <h3>{{this.title}}</h3>
      <a href="/movies/{{this._id}}">See more</a>
    </div>
  </div>
{{/each}}